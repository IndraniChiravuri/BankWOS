@{

}

<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <link href="~/Scripts/CSS/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Scripts/CSS/bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/CSS/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            console.log(Session["role"]);
            @if (Session["role"] == null) {
            }
        });
    </script>
</head>
<body>
    <div id="Navbar">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand"><h3 style="color:#ffffff">Banking Application</h3></a>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @if (ViewContext.RouteData.Values["Controller"].ToString() != "Login")
                        {
                            <button type="button" id="homeBtn" onclick="location.href='@Url.Action("Index", "Login")'" class="btn btn-outline-light  pull-right">Home</button>
                        }
                    </li>
                </ul>
            </div>
            <div class="pull-right">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item pull-right">
                        @if (Session["role"] != null)
                        {
                            <a class="navbar-brand"><h4 style="color:#ffffff">Welcome @Session["userId"] !</h4></a>
                        }
                        @if (Session["accountNumber"] != null)
                        {
                            <a class="navbar-brand">
                                <h4 style="color:#ffffff">
                                    @Session["accountNumber"]
                                </h4>
                            </a>
                        }
                        @if (Session["medal"] != null && Session["accountNumber"] != null)
                        {
                            var medal = Session["medal"].ToString() + ".jfif";
                            <img src="~/Images/@medal" alt="Sample Photo" />
                        }
                        <label id="HeaderName" style="color:#ffffff"></label>
                        <label id="HeaderAccountNo" style="color:#ffffff"></label>
                        @if (ViewContext.RouteData.Values["Controller"].ToString() != "Login")
                        {
                            <input type="button" value="Logout" id="logoutBtn" onclick="location.href='@Url.Action("Logout", "Login")'" class="btn btn-outline-light" />
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div id="container" class="row no-gutters">
        <div class="col-md-2 no-gutters">
            <div class="leftside bg-dark">
                <div class="btn-group-vertical" style="padding-left:25px;">
                    @if (Session["role"] == "Manager")
                    {
                        <button type="button" id="fundTransferBtn" onclick="location.href='@Url.Action("Withdraw","Manager")'" class="btn btn-info ">Withdraw</button><br />
                        <button type="button" id="miniStatementBtn" onclick="location.href='@Url.Action("Deposit", "Manager")'" class="btn btn-info ">Deposit</button><br />
                        <button type="button" id="changePasswordBtn" onclick="location.href='@Url.Action("ManageCustomer", "Manager")'" class="btn btn-info ">Customer </button><br />
                        <button type="button" id="balanceEnquiryBtn" onclick="location.href='@Url.Action("Account", "Manager")'" class="btn btn-info ">Account</button><br />
                    }
                    else if (Session["role"] == "Customer" && Session["accountNumber"] != null)
                    {
                        <button type="button" id="fundTransferBtn" onclick="location.href='@Url.Action("FundTransfer","Customer")'" class="btn btn-info ">Fund Transer</button><br />
                        <button type="button" id="miniStatementBtn" onclick="location.href='@Url.Action("MiniStatement", "Customer")'" class="btn btn-info ">MiniStatement</button><br />
                        <button type="button" id="changePasswordBtn" onclick="location.href='@Url.Action("ChangePassword", "Customer")'" class="btn btn-info ">ChangePassword </button><br />
                        <button type="button" id="balanceEnquiryBtn" onclick="location.href='@Url.Action("BalanceEnquiry", "Customer")'" class="btn btn-info ">BalanceEnquiry</button><br />
                        <button type="button" id="customStatementBtn" onclick="location.href='@Url.Action("CustomStatement", "Customer")'" class="btn btn-info ">CustomStatement</button><br />
                    }
                    else if (Session["role"] == "BankManager")
                    {
                        <button type="button" id="Managers" onclick="location.href='@Url.Action("ManageManager","SuperManager")'" class="btn btn-info ">Managers</button><br />
                    }
                    else
                    {
                    }
                </div>
            </div>
        </div>
        <div class="col-md-10 no-gutters">
            <div class="rightside d-flex justify-content-center align-items-center">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="modal-footer bg-dark no-gutters" style="">
    </div>
</body>
</html>